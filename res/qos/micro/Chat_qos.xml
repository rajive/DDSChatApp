<?xml version="1.0"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="/opt/rti/NDDSHOME/resource/schema/rti_dds_profiles.xsd">

	<qos_library name="ChatQosLib">
        
		<!-- QoS profile used to configure reliable communication between the DataWriter 
			and DataReader created in the example code. A QoS profile groups a set of 
			related QoS. -->
		<qos_profile name="User.Service.Chat"
			base_name="BuiltinQosLibExp::Generic.StrictReliable"
			is_default_qos="true">

			<!-- QoS used to configure the Chat topic data writers -->
			<datawriter_qos topic_filter="Chat*"
				base_name="BuiltinQosLibExp::Pattern.Status">
			</datawriter_qos>

			<datareader_qos topic_filter="Chat*"
				base_name="BuiltinQosLibExp::Pattern.Status">
			</datareader_qos>

			<participant_qos>
				<!-- The participant name, if it is set, will be displayed in the RTI 
					tools, making it easier for you to tell one application from another when 
					you're debugging. -->
				<participant_name>
					<name>Rajive</name>
				</participant_name>
			</participant_qos>
		</qos_profile>

	</qos_library>
</dds>
